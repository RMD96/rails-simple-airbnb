<!-- app/views/flats/show.html.erb -->

<p style="color: green"><%= notice %></p>

<div class="position-relative">
  <img src="https://via.placeholder.com/300x200.png?text=No+Image" class="card-img-top img-fluid max-width: 10%" alt="<%= @flat.name %>">
  <div class="position-absolute top-50 start-50 translate-middle text-center text-white">
    <h1><%= @flat.name %></h1>
    <p><%= @flat.address %></p>
  </div>
</div>

<div class="container my-4">
  <div class="row">
    <div class="col-md-8">
      <h2>A bit more on this flat:</h2>
      <p><%= @flat.description %></p>
      <img src="https://via.placeholder.com/500x300" class="img-fluid w-100 my-4" alt="Map">
    </div>
    <div class="col-md-4">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">Book this place</h5>
          <form>
            <div class="mb-3">
              <label for="fromDate" class="form-label">From</label>
              <input type="date" class="form-control" id="fromDate">
            </div>
            <div class="mb-3">
              <label for="toDate" class="form-label">To</label>
              <input type="date" class="form-control" id="toDate">
            </div>
            <p><strong><%= number_to_currency(@flat.price_per_night) %></strong> per night</p>
            <button type="submit" class="btn btn-primary">Book</button>
          </form>
        </div>
      </div>
      <button type="button" class="btn btn-link">Share</button>
    </div>
  </div>
</div>
